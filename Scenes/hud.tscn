script/source = "extends Control
signal start_game

func show_message(text):
	$Message.text = text


func _on_start_button_pressed():
	
	$Titulo.hide()
	$Message.show()
	$MessageTimer.start()
	$StartButton.hide()
	$Sprite2D.hide()
	$Sprite2D2.hide()
	show_message(\"Tu personaje habita un mundo dividido en el cual cada persona pertenece a burbujas de pensamiento basadas en valores, emociones e ideas. Tu eres el unico dispuesto a arreglarlo pero recuerdaâ€¦ No puedes hacerlo solo! Para resolver el conflicto, debes interactuar con los personajes y generar conexiones entre estos para romper sus sistemas individuales de creencias.\")

func _on_message_timer_timeout():
	$Message.hide()
	start_game.emit()
	
